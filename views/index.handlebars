<h1>Eat-Da-Burger!</h1>

<img src="https://media0.giphy.com/media/qMntr6DEZ8E4o/giphy.gif" class="center" alt="Smiley face" height="100px">

 <div class="row">
      <div class="col-sm-11 rounded border padding">
        <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="newburger">Burger Name:</label>
            <input type="text" id="newburger" name="burger_name">
              <button type="submit" id="addburger" class="btn btn-secondary">Add Burger</button>
          </div>
        </form>
        </div>
  </div>

 <div class="row">
      <div class="col-sm-5 rounded border padding">
        <h3>New Burgers</h3>
          <ul class="list-group">
            {{#each burgers}}
              {{#unless devoured}}
              <li class="list-group-item"> {{this.id}} : {{this.burger_name}} 
                <button type ="button" class ="eatburger btn btn-secondary" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Devour!</button>
              </li> 
              {{/unless}}
            {{/each}}
          </ul>
          </div>
        
  <div class="col-sm-5 rounded border padding">
          <h3>Devoured Burgers</h3>
          <ul class="list-group">
            {{#each burgers}}
              {{#if devoured}}
              <li class="list-group-item"> {{this.id}} : {{this.burger_name}} 
                {{!-- <button type ="button" class ="eatburger" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"></button> --}}
              </li> 
              {{/if}}
            {{/each}}
          </ul>
      </div>
</div>

